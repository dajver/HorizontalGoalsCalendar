<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slanting_progress="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/enter.button.color">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:id="@+id/nameLayout"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/dayCountLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"
                    android:src="@mipmap/round_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="44"
                    android:id="@+id/daysCount"
                    android:textSize="11sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/circle.fifth.color" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Large Text"
                    android:id="@+id/title"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/days"
                    android:singleLine="true" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.1"
                        android:id="@+id/monLayout"
                        android:gravity="center_vertical|center_horizontal">

                        <com.project.piechartcallendarexample.ui.calendar.view.ProgressView
                            android:id="@+id/progresBar"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="5/5"
                            android:id="@+id/repeatFirst"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/circle.fifth.color"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.1"
                        android:id="@+id/thuLayout"
                        android:gravity="center_vertical|center_horizontal">

                        <com.project.piechartcallendarexample.ui.calendar.view.ProgressView
                            android:id="@+id/progresBar2"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="5/5"
                            android:id="@+id/repeatSecond"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/circle.fifth.color"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.1"
                        android:id="@+id/wedLayout"
                        android:gravity="center_vertical|center_horizontal">

                        <com.project.piechartcallendarexample.ui.calendar.view.ProgressView
                            android:id="@+id/progresBar3"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="5/5"
                            android:id="@+id/repeatThird"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/circle.fifth.color"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.1"
                        android:id="@+id/thusLayout"
                        android:gravity="center_vertical|center_horizontal">

                        <com.project.piechartcallendarexample.ui.calendar.view.ProgressView
                            android:id="@+id/progresBar4"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="5/5"
                            android:id="@+id/repeatForth"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/circle.fifth.color"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.1"
                        android:id="@+id/frLayout"
                        android:gravity="center_vertical|center_horizontal">

                        <com.project.piechartcallendarexample.ui.calendar.view.ProgressView
                            android:id="@+id/progresBar5"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="5/5"
                            android:id="@+id/repeatfifth"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/circle.fifth.color"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.1"
                        android:id="@+id/sutLayout"
                        android:gravity="center_vertical|center_horizontal">

                        <com.project.piechartcallendarexample.ui.calendar.view.ProgressView
                            android:id="@+id/progresBar6"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="5/5"
                            android:id="@+id/repeatSixth"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/circle.fifth.color"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="0.1"
                        android:id="@+id/sunLayout"
                        android:gravity="center_vertical|center_horizontal">

                        <com.project.piechartcallendarexample.ui.calendar.view.ProgressView
                            android:id="@+id/progresBar7"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="5/5"
                            android:id="@+id/repeatSeventh"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/circle.fifth.color"
                            android:visibility="invisible" />
                    </LinearLayout>

                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>